<%include ./partials/header%>

<div class="ui main text container segment">

    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%= blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%= blog.body %></p>
            </div>
            
            <a  class="ui violet big basic button" href='/blogs/<%= blog._id %>/edit'>Update Blog</a>

            <form action="/blogs/<%=blog.id%>/delete" method="post">
                <button type="submit" name="_method" value="DELETE"  class="ui red big basic button">Delete Blog</button>
            </form>
        </div>
    </div>
</div>
<%include ./partials/footer%>